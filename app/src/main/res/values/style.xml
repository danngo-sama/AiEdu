<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme -->
    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/myAppAccentColor</item>
        <item name="colorPrimaryDark">@color/myAppPrimaryText</item>
        <item name="colorAccent">@color/myAppAccentColor</item>
        <item name="android:windowBackground">@color/myAppBackground</item>
    </style>

    <!-- Custom button style -->
    <style name="MyAppIconButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/myAppPrimaryText</item>
    </style>
</resources>